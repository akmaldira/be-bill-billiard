{
  "name": "bill-billiard-be",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon -L",
    "build": "swc src -d dist --source-maps --copy-files",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev",
    "deploy:prod": "pm2 start ecosystem.config.js --only arcadia:prod",
    "stop:dev": "pm2 stop ecosystem.config.js --only dev",
    "stop:prod": "pm2 stop ecosystem.config.js --only arcadia:prod",
    "delete:dev": "pm2 delete ecosystem.config.js --only dev",
    "delete:prod": "pm2 delete ecosystem.config.js --only arcadia:prod",
    "update:dev": "pm2 update ecosystem.config.js --only dev",
    "update:prod": "pm2 update ecosystem.config.js --only arcadia:prod",
    "watch:dev": "pm2 logs dev",
    "watch:prod": "pm2 logs arcadia:prod",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "migration:create": "typeorm migration:create -o ./migrations/migration",
    "migration:generate": "yarn build && cross-env NODE_ENV=production typeorm migration:generate -o ./migrations/migration -d ./dist/database/datasource.js",
    "migration:run": "cross-env NODE_ENV=production typeorm migration:run -d ./dist/database/datasource.js",
    "migration:revert": "cross-env NODE_ENV=production typeorm migration:revert -d ./dist/database/datasource.js",
    "cleandb": "node cleanDb.js",
    "backupdb": "node backupDb.js"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.92",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.3",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/hpp": "^0.2.3",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.2",
    "@types/uuid": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-config": "^20.10.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@types/mqtt": "^2.5.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mqtt": "^5.1.2",
    "pg": "^8.11.3",
    "pm2": "^5.3.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "valibot": "^0.18.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  }
}
